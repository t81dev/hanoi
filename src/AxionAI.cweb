static long axion_ioctl(struct file *file, unsigned int cmd, unsigned long arg) {
    t81_unit_t unit;
    int ret = 0;

if (!capable(CAP_SYS_ADMIN)) { /* Restrict ioctls to privileged users */
    pr_err("%s: ioctls require CAP_SYS_ADMIN\n", AXION_NAME);
